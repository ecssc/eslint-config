{
  "name": "@ecssc/eslint-config",
  "version": "1.0.0",
  "description": "Shared ESLint config for ECSSC projects",
  "license": "MIT",
  "author": "Edward Coleridge Smith <edcoleridgesmith@gmail.com>",
  "type": "module",
  "overrides": {
    "conventional-changelog-conventionalcommits": "^8.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./src/index.mjs"
    },
    "./default": {
      "types": "./dist/eslint-config-default.d.mts",
      "default": "./src/eslint-config-default.mjs"
    },
    "./typescript": {
      "types": "./dist/eslint-config-typescript.d.mts",
      "default": "./src/eslint-config-typescript.mjs"
    },
    "./vue": {
      "types": "./dist/eslint-config-vue.d.mts",
      "default": "./src/eslint-config-vue.mjs"
    },
    "./react-native": {
      "types": "./dist/eslint-config-react-native.d.mts",
      "default": "./src/eslint-config-react-native.mjs"
    }
  },
  "types": "./dist/index.d.mts",
  "files": [
    "src",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ecssc/eslint-config.git"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "release": "release-it"
  },
  "lint-staged": {
    "*.{mjs,cjs,js,json}": [
      "prettier --write"
    ]
  },
  "peerDependencies": {
    "eslint": ">= 9"
  },
  "dependencies": {
    "@eslint/js": "^9.39.1",
    "eslint-plugin-react-native": "^5.0.0",
    "globals": "^16.0.0",
    "@typescript-eslint/parser": "^8.48.1",
    "@vue/eslint-config-typescript": "^14.6.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "eslint-plugin-vue": "^10.6.2",
    "prettier": "^3.4.2",
    "typescript-eslint": "^8.48.1",
    "vue-eslint-parser": "^10.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@ecssc/commitlint-config": "^0.0.3",
    "@ecssc/eslint-config": "^1.0.0",
    "@ecssc/prettier-config": "^0.1.0",
    "@ecssc/release-it-config": "^1.0.0",
    "eslint": "^9.17.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.4.2",
    "release-it": "^19.0.6",
    "typescript": "^5.9.3"
  }
}
